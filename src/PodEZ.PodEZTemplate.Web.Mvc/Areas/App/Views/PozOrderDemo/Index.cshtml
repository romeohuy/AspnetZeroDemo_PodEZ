@using PodEZ.PodEZTemplate.Authorization
@using PodEZ.PodEZTemplate.Web.Areas.App.Models.PozOrderDemo
@using PodEZ.PodEZTemplate.Web.Areas.App.Startup
@model PozOrderDemoViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.PozOrderDemo;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/PozOrderDemo/Index.js" asp-append-version="true"></script>
}

 <div class="kt-subheader kt-grid__item">
  
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L("PozOrderDemo")</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L("PozOrderDemoHeaderInfo")
        </span>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_PozOrderDemo_Create))
            {
                <button id="CreateNewPozOrderDemoButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPozOrderDemo")</button>
            }
        </div>
    </div>
  
</div>
<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="PozOrderDemoTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetPozOrderDemoButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="PozOrderNameFilterId">@L("PozOrderName")</label>
									<input type="text" class="form-control" name="pozOrderNameFilter" id="PozOrderNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="PozOrderDescriptionFilterId">@L("PozOrderDescription")</label>
									<input type="text" class="form-control" name="pozOrderDescriptionFilter" id="PozOrderDescriptionFilterId">
								</div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinPozImageTotalFilterId">@L("MinMax") @L("PozImageTotal")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minPozImageTotalFilter" id="MinPozImageTotalFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxPozImageTotalFilter"  id="MaxPozImageTotalFilterId"/>
									</div>
                                </div>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="PozOrderDemoTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("PozOrderName")</th>
								<th>@L("PozOrderDescription")</th>
								<th>@L("PozImageTotal")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  
</div>